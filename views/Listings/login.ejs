<link rel="stylesheet" href="/css/login.css">

<body>
  <div class="container" id="container">
    <!-- Sign Up Form -->
    <div class="form-container sign-up">
      <form action="/signup" method="POST">
        <h1>Create Account</h1>
        <div class="social-icons">
          <!-- <a href="#" class="icon"><i class="fa-brands fa-google-plus-g"></i></a>
          <a href="#" class="icon"><i class="fa-brands fa-facebook-f"></i></a> -->
        </div>
        <span>Please enter your details for registration</span>

        <% if (typeof signup_error !== "undefined") { %>
          <div class="error-message"><%= signup_error %></div>
        <% } %>

        <input type="text" name="username" placeholder="Name" required>
        <input type="email" name="email" placeholder="Email" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">Sign Up</button>
      </form>
    </div>

    <!-- Sign In Form -->
    <div class="form-container sign-in">
      <form action="/login" method="POST">
        <h1>Sign In <i class="fa-brands fa-google"></i></h1>
        
        <div class="social-icons">

        
        </div>
        <span>Please use your email password</span>

        <% if (typeof login_error !== "undefined") { %>
          <div class="error-message"><%= login_error %></div>
        <% } %>

        <% if (typeof signup_success !== "undefined") { %>
          <div class="success-message">Registration successful! Please login.</div>
        <% } %>

        <input type="email" name="email" placeholder="Email" required placeholder="Enter your email">
        <input type="password" name="password" placeholder="Password" required placeholder="Enter Your Password">
        <a href="#">Forgot Your Password?</a>
        <button type="submit">Sign In</button>
      </form>
    </div>

    <!-- Toggle Container -->
    <div class="toggle-container">
      <div class="toggle">
        <div class="toggle-panel toggle-left">
          <h1>Welcome Back!</h1>
          <p>Enter your personal details to use all site features</p>
          <button class="hidden" id="login">Sign In</button>
        </div>
        <div class="toggle-panel toggle-right">
          <h1>New Here?</h1>
          <p>Register with your personal details to get started</p>
          <button class="hidden" id="register">Sign Up</button>
        </div>
      </div>
    </div>
  </div>
  

<footer class="loginfooter">
    <div class="f-info">
        <div class="f-info-socials">
            <i class="fa-brands fa-square-facebook"></i>
            <i class="fa-brands fa-square-instagram"></i>
            <i class="fa-brands fa-tiktok"></i>


        </div>
        <div class="f-info-brand"> &copy; SajiloStay Private Limited</div>
      


        <div class="f-info-links">
            <a href="/privaacy">Privacy</a>
            <a href="/terms">Terms</a>
            
        </div>
        <h6>Made with &hearts; by Karan</h6>
    </div>
</footer>

  <script src="/Js/login.js"></script>
</body>
